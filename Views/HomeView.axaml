<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CultivoApp.Views.HomeView"
             Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40" Spacing="25" HorizontalAlignment="Center">

           

           <!-- ðŸ”¹ Card principal -->
<Border Background="White"
        CornerRadius="15"
        Padding="25"
        Width="700"
        BorderBrush="#EEE"
        BorderThickness="1"
        Effect="drop-shadow(0 0 10 #DDD)">
    <StackPanel Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
        
        <!-- ðŸ”¹ Imagem do cogumelo -->
        <Image Source="{Binding MushroomImage}"
               Width="90"
               Height="90"
               Stretch="Uniform"
               VerticalAlignment="Center"/>

        <!-- ðŸ”¹ Texto -->
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="{Binding SelectedMushroom.Name}"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#1E2E3E"
                       Margin="0,0,0,8"/>
            <TextBlock Text="{Binding SelectedMushroom.Temperature}"
                       FontSize="16"
                       Foreground="#444"/>
            <TextBlock Text="{Binding SelectedMushroom.Humidity}"
                       FontSize="16"
                       Foreground="#444"/>
        </StackPanel>

    </StackPanel>
</Border>

            <!-- ðŸ”¹ ComboBox -->
            <ComboBox  ItemsSource="{Binding Mushrooms}"
          SelectedItem="{Binding SelectedMushroom}"
          Width="250"
          Height="38"
          Background="#F5F5F5"
          Foreground="Black"
          BorderBrush="#CCC"
          BorderThickness="1"
          CornerRadius="6"
          HorizontalAlignment="Center"
          FontSize="15">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" FontSize="15"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- ðŸ”¹ Temperatura / Umidade -->
         <!-- ðŸ”¹ Temperatura / Umidade -->
<Border Background="White"
        CornerRadius="15"
        Padding="30"
        Width="700"
        BorderBrush="#EEE"
        BorderThickness="1"
        Effect="drop-shadow(0 0 10 #DDD)">
    <Grid ColumnDefinitions="1*,1*" HorizontalAlignment="Center" VerticalAlignment="Center">

        <!-- Temperatura -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="6">
            <TextBlock Text="Temperatura Atual"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#1E2E3E"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="24.3 Â°C"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="#E67E22"
                       HorizontalAlignment="Center"
                       Margin="0,3,0,0"/>
        </StackPanel>

        <!-- Umidade -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="6">
            <TextBlock Text="Umidade Atual"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#1E2E3E"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="78.5 %"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="#3498DB"
                       HorizontalAlignment="Center"
                       Margin="0,3,0,0"/>
        </StackPanel>

    </Grid>
</Border>


        </StackPanel>
    </ScrollViewer>
</UserControl>
