<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CultivoApp.Views.HomeView">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Spacing="20" HorizontalAlignment="Center">

            <!-- Cabeçalho -->
            <TextBlock Text="🏠 Monitoramento - Estufa Inteligente"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"/>

            <!-- ComboBox -->
            <ComboBox ItemsSource="{Binding Mushrooms}"
                      SelectedItem="{Binding SelectedMushroom}"
                      Width="250"
                      HorizontalAlignment="Center">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Card de informações -->
            <Border Background="#FAFAFA"
                    CornerRadius="10"
                    Padding="20"
                    Width="600"
                    BorderBrush="#DDD"
                    BorderThickness="1">
                <StackPanel Spacing="10" HorizontalAlignment="Center">

                    <TextBlock Text="{Binding SelectedMushroom.Name}"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>

                    <Image Source="{Binding SelectedMushroom.ImagePath}"
                           Height="180"
                           Width="260"
                           Stretch="UniformToFill"
                           HorizontalAlignment="Center"
                           Margin="0,10"/>

                    <TextBlock Text="{Binding SelectedMushroom.Temperature}"
                               FontSize="14"
                               Foreground="#444"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="{Binding SelectedMushroom.Humidity}"
                               FontSize="14"
                               Foreground="#444"
                               HorizontalAlignment="Center"/>

                    <Separator Margin="0,10"/>

                    <!-- Simulação de leituras atuais -->
                    <StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="🌡️ Temperatura Atual"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="23.5 °C"
                                       FontSize="16"
                                       Foreground="#E67E22"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="💧 Umidade Atual"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="82 %"
                                       FontSize="16"
                                       Foreground="#3498DB"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
