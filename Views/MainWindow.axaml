<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:CultivoApp.Views"
        xmlns:vm="using:CultivoApp.ViewModels"
        x:Class="CultivoApp.Views.MainWindow"
        Width="900" Height="700"
        Title="Estufa Inteligente"
        Background="White">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- ðŸ”¹ Barra de navegaÃ§Ã£o -->
       <Border Background="#F8F9FA" DockPanel.Dock="Top" Padding="20,10">
