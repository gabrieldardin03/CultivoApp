                Spacing="30"
                HorizontalAlignment="Center">
        <TextBlock Text="Home"
                   FontSize="18"
                   Cursor="Hand"
                   Foreground="#2C3E50"
                   FontWeight="Bold"
                   PointerPressed="OnHomeClicked"/>

        <TextBlock Text="Manual"
                   FontSize="18"
                   Cursor="Hand"
                   Foreground="#2C3E50"
                   PointerPressed="OnManualClicked"/>

        <TextBlock Text="Cogumelos"
                   FontSize="18"
                   Cursor="Hand"
                   Foreground="#2C3E50"
                   PointerPressed="OnCogumelosClicked"/>
    </StackPanel>
</Border>

        <!-- ðŸ”¹ ConteÃºdo dinÃ¢mico -->
        <ContentControl Content="{Binding CurrentView}" Margin="10"/>
    </DockPanel>
</Window>
