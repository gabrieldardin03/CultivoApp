<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CultivoApp.Views.ManualView">

    <!-- ðŸ”¹ Estilos visuais dos ToggleSwitch -->
    <UserControl.Styles>
        <!-- Estado padrÃ£o (desligado) -->
        <Style Selector="ToggleSwitch">
            <Setter Property="Background" Value="#E0E0E0"/> <!-- cinza claro -->
            <Setter Property="BorderBrush" Value="#B0B0B0"/> <!-- contorno cinza -->
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="25"/>
        </Style>

        <!-- Estado ligado -->
        <Style Selector="ToggleSwitch:checked">
            <Setter Property="Background" Value="#27AE60"/> <!-- verde -->
            <Setter Property="BorderBrush" Value="#1E874B"/>
        </Style>

        <!-- Hover (passar o mouse por cima) -->
        <Style Selector="ToggleSwitch:pointerover">
            <Setter Property="BorderBrush" Value="#888"/>
        </Style>

        <!-- Desabilitado -->
        <Style Selector="ToggleSwitch:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40" Spacing="25" HorizontalAlignment="Center">

            <!-- ðŸ”¹ Card principal -->
            <Border Background="White"
                    CornerRadius="15"
                    Padding="25"
                    Width="700"
                    BorderBrush="#EEE"
                    BorderThickness="1"
                    Effect="drop-shadow(0 0 10 #DDD)">
                <StackPanel Spacing="20">

                    <!-- Modo automÃ¡tico -->
                    <StackPanel Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                        <TextBlock Text="Modo AutomÃ¡tico"
                                   FontSize="18"
                                   Foreground="#1E2E3E"
                                   VerticalAlignment="Center"/>
                        <ToggleSwitch IsChecked="{Binding IsAutomatic, Mode=TwoWay}" Width="60" Height="25"/>
                    </StackPanel>

                    <!-- Controles -->
                    <StackPanel Spacing="15" Margin="0,15,0,0">

                        <!-- Umidificador -->
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Umidificador" Width="220" FontSize="17" Foreground="#1E2E3E"/>
                            <ToggleSwitch IsChecked="{Binding HumidifierOn, Mode=TwoWay}"
                                          IsEnabled="{Binding IsManual}"/>
                        </StackPanel>

                        <!-- Ventilador / Aquecedor -->
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Ventilador / Aquecedor" Width="220" FontSize="17" Foreground="#1E2E3E"/>
                            <ToggleSwitch IsChecked="{Binding FanHeaterOn, Mode=TwoWay}"
                                          IsEnabled="{Binding IsManual}"/>
                        </StackPanel>

                        <!-- Exaustor -->
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Exaustor" Width="220" FontSize="17" Foreground="#1E2E3E"/>
                            <ToggleSwitch IsChecked="{Binding ExhaustOn, Mode=TwoWay}"
                                          IsEnabled="{Binding IsManual}"/>
                        </StackPanel>

                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ðŸ”¹ Sensores -->
            <Border Background="White"
                    CornerRadius="15"
                    Padding="25"
                    Width="700"
                    BorderBrush="#EEE"
                    BorderThickness="1"
                    Effect="drop-shadow(0 0 10 #DDD)">
                <Grid ColumnDefinitions="1*,1*" HorizontalAlignment="Center">
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="Temperatura Atual" FontSize="18" FontWeight="Bold" Foreground="#1E2E3E"/>
                        <TextBlock Text="{Binding Temperature, StringFormat='{}{0:F1} Â°C'}"
                                   FontSize="30" FontWeight="Bold" Foreground="#E67E22"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="Umidade Atual" FontSize="18" FontWeight="Bold" Foreground="#1E2E3E"/>
                        <TextBlock Text="{Binding Humidity, StringFormat='{}{0:F1} %'}"
                                   FontSize="30" FontWeight="Bold" Foreground="#3498DB"/>
                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
